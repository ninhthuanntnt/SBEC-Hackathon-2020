    <script src="js/ws_recommended_product.js"></script>
    <script>
        socket.on('recommend-product', function (products) {
            console.log(products);
            let $swiperWrapper = $('.swiper-wrapper');
            $swiperWrapper.html('');
            for (let i = 0; i < products.length; i++) {
                $swiperWrapper.append(`<div class="sbec-product-card sbec-product-card--border swiper-slide">
                                            <div class=" sbec-product-card__image">
                                                <img src="${products[i].imagePath}" alt="product">
                                            </div>
                                            <p class="sbec-product-card__name">
                                                ${products[i].name}
                                            </p>
                                            <p class="sbec-product-card__price">
                                                ${products[i].price} $
                                            </p>
                                        </div>` );
            }
            initSwiper();
        });
    </script>
    <script src="https://unpkg.com/swiper/js/swiper.min.js"></script>
    <script>
        function initSwiper() {
            let swiper = new Swiper('.swiper-container', {
                slidesPerView: 1,
                spaceBetween: 10,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                breakpoints: {
                    640: {
                        slidesPerView: 2,
                        spaceBetween: 20,
                    },
                    768: {
                        slidesPerView: 3,
                        spaceBetween: 40,
                    },
                    1024: {
                        slidesPerView: 4,
                        spaceBetween: 50,
                    },
                },
            });
        }
    </script>

